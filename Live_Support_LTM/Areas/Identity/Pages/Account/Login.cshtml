@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style>

    .login-page {
        background: linear-gradient(to right, #eef2f3, #8e9eab);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Poppins', sans-serif;
    }

    .login-container {
        max-width: 900px;
        background-color: #fff;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .login-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 2rem;
        color: #333;
    }

    .login-content {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
    }

    .login-form-section,
    .login-external-section {
        flex: 1;
        min-width: 300px;
    }

    .login-card {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 1.5rem;
    }

    .login-subtitle {
        font-weight: 600;
        color: #555;
        margin-bottom: 1rem;
        font-size: 1.25rem;
    }

    .btn-outline-secondary {
        background-color: #fff;
        border-color: #ccc;
        color: #333;
        font-weight: 500;
    }

        .btn-outline-secondary:hover {
            background-color: #e2e6ea;
        }

    .form-check-label {
        margin-left: 0.5rem;
    }

    .text-danger {
        font-size: 0.9rem;
    }

    .form-control {
        border-radius: 8px;
    }

</style>
<div class="login-page">
    <div class="login-container">
        <h1 class="login-title">@ViewData["Title"]</h1>
        <div class="login-content">
            <div class="login-form-section">
                <section class="login-card">
                    <form id="account" method="post">
                        <h2 class="login-subtitle">Use a local account to log in</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary w-100">Log in</button>

                        <div class="mt-3 text-center">
                            <a asp-page="./ForgotPassword">Forgot your password?</a><br />
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a><br />
                            <a asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </div>
                    </form>
                </section>
            </div>

            <div class="login-external-section">
                <section class="login-card">
                    <h3 class="login-subtitle">Use another service to log in</h3>
                    <hr />
                    @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <p>No external authentication services configured. <a href="https://go.microsoft.com/fwlink/?LinkID=532715">Learn how to enable them</a>.</p>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name">
                                        <i class="bi bi-box-arrow-in-right me-2"></i> Log in with @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    }
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
